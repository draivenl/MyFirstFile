<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.com.etn.myfirstfile.MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_filename"
        />
    <EditText
        android:id="@+id/file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_filetext"
        />
    <EditText
        android:id="@+id/file_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        />
    <Button
        android:id="@+id/main_btn_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_savebtn"
        android:textAllCaps="false"
        android:onClick="saveFile"
        />
    <Button
        android:id="@+id/main_btn_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_readbtn"
        android:textAllCaps="false"
        android:onClick="readFile"
        />

</LinearLayout>
